<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <!-- flatpicker -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    
    
    <title>전역일 계산기</title>
  </head>
  <body>

    <%- include('nav.html') %> 

    <form class="container" action="/cal/" method="POST">
        <div class="mb-3 mt-5">
            <label for="disabledSelect" class="form-label">병역 종류</label>
            <select name="type" id="disabledSelect" class="form-select">
                <option value="A">육군</option>
                <option value="B">해군</option>
                <option value="C">공군</option>
                <option value="D">해병대</option>
                <option value="E">공익</option>
            </select>
            <div class="mt-5">
              <input name="date" type="text" class="selector form-select" placeholder="입대일을 선택하세요." />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">계산하기</button>
      </form>


      <script type="text/javascript">
        $(".selector").flatpickr({
        dateFormat: "Y-m-d",
        });
        </script>
 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
  </body>
</html>
